{% extends '_base-sign.twig' %}
{% block login %}
	<p class="lead">Entra en tu cuenta</p>
	<form class="form-auth-small" action="usuario/dologin">
		<div class="form-group">
			<label for="signin-email" class="control-label sr-only">Email</label>
			<input type="email" class="form-control" id="signin-email" name="correo" placeholder="Email">
		</div>
		<div class="form-group">
			<label for="signin-password" class="control-label sr-only">Password</label>
			<input type="password" class="form-control" name="clave" id="signin-password" placeholder="Password">
		</div>
	
		<button type="submit" class="btn btn-primary btn-lg btn-block">LOGIN</button>
		<div class="bottom">
			{#<span class="helper-text"><i class="fa fa-lock"></i> <a href="#">Recuperar contrase√±a / </a></span>#}
			<span class="helper-text"><i class="fa fa-user-o"></i> <a href="usuario/doRegistro">Crear cuenta</a></span>
		</div>
	</form>
{% endblock %}
